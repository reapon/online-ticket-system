@model OnlineTicketSystem.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Create Role</h1>

<div class="container pt-5">
    <div class="text-center">
        <h2 class="badge badge-info">Create Role</h2>
    </div>
    <form asp-action="CreateRole" method="post" class="mt-1">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        

        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="RoleName" class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success" style="width:auto">
                    Create Role
                </button>
                <a asp-action="ListRoles" class="btn btn-info">Back</a>
            </div>
        </div>
    </form>
</div>
