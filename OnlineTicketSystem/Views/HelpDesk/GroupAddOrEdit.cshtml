@model OnlineTicketSystem.Models.Group




@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    //ViewData["Title"] = "Create";
    if (Model.GroupID > 0)
    {
        ViewData["Title"] = "Edit";

    }
    else
    {
        ViewData["Title"] = "Create";

    }
}



<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="GroupAddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GroupID" />
                <input type="hidden" asp-for="ComID" value="@ViewBag.ComId" />


                <div class="form-group">
                    <label asp-for="GroupName" class="control-label"></label>
                    <input asp-for="GroupName" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>

                


                @if (Model.GroupID > 0)
                {
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-sm text-white btn-warning" />
                        <a class="btn btn-sm btn-info text-white" asp-action="GroupIndex">Back to List</a>

                    </div>
                }
                else
                {
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-sm  btn-primary" />
                        <a class="btn btn-sm btn-info text-white" asp-action="GroupIndex">Back to List</a>

                    </div>
                }

            </form>
        </div>
    </div>
    <br />
    @*<div>
        <a class="btn btn-sm btn-info" asp-action="GroupIndex">Back to List</a>
    </div>*@

</div>


