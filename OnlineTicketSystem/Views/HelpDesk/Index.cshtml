@model IEnumerable<OnlineTicketSystem.Models.Group>

@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    @*<h3 class="text-center">All Groups In this Ticket System</h3>*@

    <div class="row justify-content-center">
        @if (Model.Any())
        {

            @foreach (var item in Model)
            {

                <div class="card col-md-3 m-4">
                    <div class="card-body">
                        <h6 class="card-title">@item.GroupName</h6>
                       
                        <a class="btn btn-sm btn-dark mt-4" asp-action="TicketCreate" asp-controller="HelpDesk" asp-route-id="@item.GroupID">Click For Support</a>
                    </div>
                </div>

            }

        }
        else
        {
            <div class="card col-md-6 justify-content-center">
                <div class="card-body">
                    <h2>No Group Available</h2>
                </div>
            </div>
        }
    </div>