@model OnlineTicketSystem.Models.Category


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";


    //ViewData["Title"] = "Create";
    if (Model.CategoryID > 0)
    {
        ViewData["Title"] = "Edit";

    }
    else
    {
        ViewData["Title"] = "Create";

    }
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryID" />
                <input type="hidden" asp-for="ComID"  value="@ViewBag.ComId" />

                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>




                @if (Model.CategoryID > 0)
                {
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-warning btn-sm text-white" />
                        <a class="btn btn-sm btn-info text-white" asp-action="CategoryIndex">Back to List</a>

                    </div>
                }
                else
                {
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a class="btn btn-sm btn-info text-white" asp-action="CategoryIndex">Back to List</a>

                    </div>
                }

            </form>
        </div>
    </div>


</div>


