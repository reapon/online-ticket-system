@model IEnumerable<OnlineTicketSystem.Models.Group>

<h3 class="text-center badge badge-dark">All Group</h3>   
 <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Group ID</th>
                <th>Group Name</th>
                <th>Assign Supporter</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.GroupID</td>
                    <td>@item.GroupName</td>
                    <td>
                        <a asp-action="AssignUserToGroup" asp-controller="HelpDesk" asp-route-groupid="@item.GroupID">Assign</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>