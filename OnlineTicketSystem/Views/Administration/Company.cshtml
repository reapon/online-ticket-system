@model IEnumerable<OnlineTicketSystem.Models.CompanyInformation>

@if (Model.Any())
{
<div class="row justify-content-center text-center">
    @foreach (var item in Model)
    {
        <div class="card col-md-3 m-4">
            <div class="card-body">
                <h5 class="card-title">@item.CompanyName</h5>
                <a class="btn btn-dark mt-4" asp-action="RegisterForCompany" asp-controller="Administration" asp-route-comid="@item.ComID">Register</a>
            </div>
        </div>
    }
</div>
    
}