@model OnlineTicketSystem.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}




<style>
    .btn {
        border-radius: 0 !important;
    }
</style>


<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">


                                <form class="mx-1 mx-md-4" method="post">

                                    <div asp-validation-summary="All" class="text-danger"></div>


                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label class="form-label" for="form3Example1c">First Name</label>

                                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" id="form3Example1c" />
                                                </div>

                                                <div class="col-md-6">
                                                    <label class="form-label" for="form3Example2c">Last Name</label>

                                                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" id="form3Example2c" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example2c">Last Name</label>

                                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" id="form3Example2c" />
                                        </div>
                                    </div>*@


                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>

                                            <input asp-for="Email" type="email" id="form3Example3c" class="form-control" placeholder="example@gmail.com" />
                                        </div>
                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example7c">Company Name</label>

                                            <input asp-for="CompanyName" type="text" class="form-control" placeholder="Your Company Name" id="form3Example7c" />
                                        </div>
                                    </div>



                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Password</label>

                                            <input asp-for="Password" type="password" id="form3Example4c" class="form-control" placeholder="Enter Password" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4cd">Confirm password</label>

                                            <input asp-for="ConfirmPassword" type="password" id="form3Example4cd" class="form-control" placeholder="Re-type Password" />
                                        </div>
                                    </div>



                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-success btn-lg btn-block">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/images/draw1.png" class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



